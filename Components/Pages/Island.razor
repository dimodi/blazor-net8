@rendermode InteractiveServer

<div style="padding: 1em; border: 1px solid #999; background: #fff; color: #000;">
    <p>Island of interactivity <strong>@Name</strong></p>

    <TelerikContainer>
        <p>The DatePicker Value is: @DatePickerValue.ToShortDateString()</p>
        <TelerikDatePicker @bind-Value="@DatePickerValue"
                           Width="160px" />
    </TelerikContainer>
</div>

@code {
    private DateTime DatePickerValue { get; set; } = DateTime.Today;

    [Parameter]
    public string Name { get; set; } = "Island";
}
